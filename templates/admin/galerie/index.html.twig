{% extends 'admin/base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}

<!-- banner -->

<div class="container">

  <h4>Images</h4>
  <div class="row">
  {% for part in images %}
    <div class="col-lg-3 col-sm-6 mb-4" data-aos="fade-up" data-aos-delay="00">
      <div class="card" style="width: 18rem;">
        <img src="{{part.getUrl}}" class="card-img-top" alt="{{part.getName()}}">
        <div class="card-body">
          <p class="card-text">{{part.getName()}}</p>
          <a href="{{ path('modif_galerie', {"id": part.getId()}) }}" class="btn btn-primary">Editer</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

  <h4>Video</h4>
  <div class="row">
  {% for part in videos %}
    <div class="col-lg-3 col-sm-6 mb-4" data-aos="fade-up" data-aos-delay="00">
      <div class="card" style="width: 18rem;">
        <video class="card-img-top" width="320" controls>
          <source src="{{part.getUrl}}" type="video/mp4">
          <source src="{{part.getUrl}}" type="video/webm">
        </video>
        <div class="card-body">
          <p class="card-text">{{part.getName()}}</p>
          <a href="{{ path('modif_galerie', {"id": part.getId()}) }}" class="btn btn-primary">Editer</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

</div>

{% endblock %}
